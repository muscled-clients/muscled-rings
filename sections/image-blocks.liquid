<style>
    section.img-w-text-main {
      padding: 120px 0;
      background: #fff;
  }
    .d11-w-contain {
      max-width: 1180px;
      margin: 0 auto;
      padding: 0 130px;
    }
    h5.d11-accent {
      color: #1B1B1B;
      text-align: center;
      font-family: Roboto;
      font-size: 14px;
      font-style: normal;
      font-weight: 300;
      line-height: 20px;
      margin: 0;
    }
    h2.d11__heading-h2 {
      color: #1B1B1B;
      text-align: center;
      font-family: "Tenor Sans";
      font-size: 32px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      margin: 12px 0 40px;
    }
    .d11-image-text-container {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      gap: 20px;
    }
    .d11__img_wrap img {
        border-radius: 8px 8px 0px 0px;
        display: block;
        max-width: 100%;
        width: 100%;
        object-fit: cover;
        height: 240px;
    }
    .d11__text_container {
        padding: 20px;
    }
    .d11__content-container {
        background: #F2F1EA;
        border-radius: 8px;
        min-width: 280px;
    }
    .d11__img_wrap {
        height: 240px;
    }
    p.d11__text-description {
        color: #000;
        font-family: Roboto;
        font-size: 14px;
        font-style: normal;
        font-weight: 300;
        line-height: 140%;
        margin: 0 0 16px;
      letter-spacing: normal;
    }
    p.d11__author {
        color: rgba(0, 0, 0, 0.50);
        font-family: "Tenor Sans";
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        margin: 0;
    }
    .progress-container__d11 {
      display: none;
    }
    @media screen and (min-width: 769px) and (max-width: 1200px) {
    }
    @media(max-width: 1200px){
    .d11__img_wrap {
        height: unset;
    }
    .d11-w-contain {
        padding: 0;
    }
    section.img-w-text-main {
        padding: 40px 0;
    }
    h5.d11-accent {
      font-size: 14px;
      font-weight: 300;
      line-height: 20px;
    }
    h2.d11__heading-h2 {
      font-size: 24px;
      margin: 8px 0 16px;
    }
    .d11__content-container {
        border-radius: 7.143px 7.143px 0px 0px;
    }
    .d11__text_container {
        padding: 12px;
    }
    p.d11__text-description {
        margin: 0 0 14px;
    }
    .d11-image-text-container {
        display: flex;
        justify-content: normal;
        align-items: flex-start;
        gap: 4px;
        overflow-x: auto;
        width: auto;
        padding: 0 0 16px;
    }
    .d11__content-container {
        border-radius: 8px;
        width: 100%;
        max-width: 100%;
    }
    /* ///////// */
    /* Progress bar container at the bottom of the section */
    .progress-container__d11 {
      display: block;
        position: absolute;
        bottom: 0;
        left: 0;
        max-width: 100%;
        height: 2px; /* Thickness */
        background-color: #2D1B38!important; /* Light background */
        z-index: 10;
        margin: 0 20px;
    }

    /* Progress bar fill */
    .progress-bar__d11 {
        height: 100%;
        width: 0; /* Initially empty */
        background-color: #2D1B38!important; /* Progress color */
        transition: width 0.3s ease-in-out;
    }

     .progress-bar__d11 {
        appearance: none;
        -webkit-appearance: none;
        width: 100%;
        height: 2px;
    }

    .progress-bar__d11::-webkit-progress-bar {
        background-color: #EDEDED; /* Background color */
    }

    .progress-bar__d11::-webkit-progress-value {
        background-color: #2D1B38; /* Foreground bar color */
    }

    .progress-bar__d11::-moz-progress-bar {
        background-color: #2D1B38;
       padding: 0 20px;
      margin: 0 20px
    }
     ::-webkit-scrollbar {
        height: 2px;
        padding: 0 20px;
      margin: 0 20px
    }

    ::-webkit-scrollbar-track {
        background: #E9E9E9; /* Track color */
      padding: 0 20px;
      margin: 0 20px;
    }

    ::-webkit-scrollbar-thumb {
        background: #2D1B38; /* Thumb color */
        border-radius: 10px;
       padding: 0 20px;
      margin: 0 20px
    }
    .d11__content-container:last-child {
        margin: 0 20px 0 0;
    }

    .d11__content-container:first-child {
        margin: 0 0rem 0 20px;
    }
    }
</style>
<section class="img-w-text-main">
  <div class="d11-w-contain">
    <h5 class="d11-accent">
      {{ section.settings.accent }}
    </h5>
    <h2 class="d11__heading-h2">
      {{ section.settings.heading }}
    </h2>
    <div class="d11-image-text-container">
      {% for block in section.blocks %}
        <div class="d11__content-container">
          <div class="d11__img_wrap">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 500, height: 500 }}">
            {% endif %}
          </div>
          <div class="d11__text_container">
            <p class="d11__text-description">
              {{ block.settings.description }}
            </p>
            <p class="d11__author">
              {{ block.settings.author_text }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="d11__padding">
      <div class="progress-bar__d11"></div>
    </div>
  </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function () {
      const progressBarD5 = document.querySelector(".progress-bar__d11");
      const sectionD5 = document.querySelector(".img-w-text-main");
      console.log("This is section ", sectionD5);
      console.log(progressBarD5);

      function updateProgressBar() {
          let scrollPositionD5 = sectionD5.scrollLeft;
          let maxScrollD5 = sectionD5.scrollWidth - sectionD5.clientWidth;
          let scrollPercentageD5 = (scrollPositionD5 / maxScrollD5) * 100;
          progressBarD5.style.width = scrollPercentageD5 + "%";
        console.log('scrollPercentageD5', scrollPercentageD5);
        console.log('scrollPositionD5', scrollPositionD5);
        console.log('maxScrollD5', maxScrollD5);
      }

      // Listen for horizontal scroll event
      sectionD5.addEventListener("scroll", updateProgressBar);
  });
</script>
