<style>
    section.img-w-text-main {
      padding: 120px 0;
      background: #fff;
  }
    .d11-w-contain {
      max-width: 1180px;
      margin: 0 auto;
      padding: 0 130px;
    }
    h5.d11-accent {
      color: #1B1B1B;
      text-align: center;
      font-family: Roboto;
      font-size: 14px;
      font-style: normal;
      font-weight: 300;
      line-height: 20px;
      margin: 0;
    }
    h2.d11__heading-h2 {
      color: #1B1B1B;
      text-align: center;
      font-family: "Tenor Sans";
      font-size: 32px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      margin: 12px 0 40px;
    }
    .d11-image-text-container {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      gap: 20px;
    }
    .d11__img_wrap img {
        border-radius: 8px 8px 0px 0px;
        display: block;
        max-width: 100%;
        width: 100%;
        object-fit: cover;
        height: 240px;
    }
    .d11__text_container {
        padding: 20px;
    }
    .d11__content-container {
        background: #F2F1EA;
        border-radius: 8px;
        min-width: 280px;
    }
    .d11__img_wrap {
        height: 240px;
    }
    p.d11__text-description {
        color: #000;
        font-family: Roboto;
        font-size: 14px;
        font-style: normal;
        font-weight: 300;
        line-height: 140%;
        margin: 0 0 16px;
      letter-spacing: normal;
    }
    p.d11__author {
        color: rgba(0, 0, 0, 0.50);
        font-family: "Tenor Sans";
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        margin: 0;
    }
    .progress-container__d11 {
      display: none;
    }
    @media screen and (min-width: 769px) and (max-width: 1200px) {
    }
    @media(max-width: 1200px){
    .d11__img_wrap {
        height: unset;
    }
    .d11-w-contain {
        padding: 0;
    }
    section.img-w-text-main {
        padding: 40px 0;
      position: relative;
      width: 100%;
      overflow: hidden;
    }
    h5.d11-accent {
      font-size: 14px;
      font-weight: 300;
      line-height: 20px;
    }
    h2.d11__heading-h2 {
      font-size: 24px;
      margin: 8px 0 16px;
    }
    .d11__content-container {
        border-radius: 7.143px 7.143px 0px 0px;
    }
    .d11__text_container {
        padding: 12px;
    }
    p.d11__text-description {
        margin: 0 0 14px;
    }
    .d11-image-text-container {
        display: flex;
        justify-content: normal;
        align-items: flex-start;
        gap: 4px;
        overflow-x: auto;
        width: auto;
        padding: 0 0 16px;
      scroll-snap-type: x mandatory;
    }
    .d11__content-container {
        border-radius: 8px;
        width: 100%;
        max-width: 100%;
        scroll-snap-align: center;
    }
      .d11__padding{
        width: 100%;
        padding: 0 20px;
      }
    /* ///////// */
    /* Progress bar container at the bottom of the section */
    .progress-container__d11 {
      display: block;
        position: absolute;
        bottom: 0;
        left: 0;
        max-width: 100%;
        height: 2px; /* Thickness */
        background-color: #2D1B38!important; /* Light background */
        z-index: 10;
        margin: 0 20px;
    }

    /* Progress bar fill */
    .progress-bar__d11 {
        height: 100%;
        width: 0; /* Initially empty */
        background-color: #2D1B38!important; /* Progress color */
        transition: width 0.2s;
    }

     .progress-bar__d11 {
        appearance: none;
        -webkit-appearance: none;
        width: 100%;
        height: 2px;
    }

    .progress-bar__d11::-webkit-progress-bar {
        background-color: #EDEDED; /* Background color */
    }

    .progress-bar__d11::-webkit-progress-value {
        background-color: #2D1B38; /* Foreground bar color */
    }

    .progress-bar__d11::-moz-progress-bar {
        background-color: #2D1B38;
       padding: 0 20px;
      margin: 0 20px
    }
     ::-webkit-scrollbar {
        height: 2px;
        padding: 0 20px;
      margin: 0 20px
    }

    ::-webkit-scrollbar-track {
        background: #E9E9E9; /* Track color */
      padding: 0 20px;
      margin: 0 20px;
    }

    ::-webkit-scrollbar-thumb {
        background: #2D1B38; /* Thumb color */
        border-radius: 10px;
       padding: 0 20px;
      margin: 0 20px
    }
    .d11__content-container:last-child {
        margin: 0 20px 0 0;
    }

    .d11__content-container:first-child {
        margin: 0 0rem 0 20px;
    }
    .d5-arrows{
          display: flex;
          align-items: center;
          justify-content: space-between;
          position: absolute;
          width: 100%;
          top: 50%;
          transform: translateY(-50%);
          padding-right: 40px;
    }
    .d5-arrows .prev-arrow-d5{
      rotate: 180deg;
    }
    .d5-arrows .d5-disable{
      opacity: 0 !important;
    }
    }
</style>
<section class="img-w-text-main" data-slider-container>
  <div class="d11-w-contain">
    <h5 class="d11-accent">
      {{ section.settings.accent }}
    </h5>
    <h2 class="d11__heading-h2">
      {{ section.settings.heading }}
    </h2>
    <div class="d11-image-text-container" data-slider-d5>
      {% for block in section.blocks %}
        <div class="d11__content-container">
          <div class="d11__img_wrap">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 500, height: 500 }}">
            {% endif %}
          </div>
          <div class="d11__text_container">
            <p class="d11__text-description">
              {{ block.settings.description }}
            </p>
            <p class="d11__author">
              {{ block.settings.author_text }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="d11__padding">
      <div class="progress-bar__d11" data-progress-d5></div>
      <div class="d5-arrows">
        <div class="prev-arrow-d5" data-prev-d5>
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="41" viewBox="0 0 40 41" fill="none">
            <circle cx="20" cy="20.0386" r="20" fill="white"/>
            <path d="M16.4906 13.2497C16.7718 12.9682 17.2282 12.9682 17.5094 13.2497L23.7889 19.5292C24.0704 19.8104 24.0704 20.2667 23.7889 20.548L17.5094 26.8275C17.3687 26.9682 17.1842 27.0386 16.9998 27.0386C16.8153 27.0386 16.6309 26.9682 16.4904 26.8275C16.2089 26.5462 16.2089 26.0899 16.4904 25.8087L22.2604 20.0386L16.4906 14.2685C16.2091 13.9872 16.2091 13.5309 16.4906 13.2497Z" fill="#1B1B1B"/>
          </svg>
        </div>
        <div class="next-arrow-d5" data-next-d5>
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="41" viewBox="0 0 40 41" fill="none">
            <circle cx="20" cy="20.0386" r="20" fill="white"/>
            <path d="M16.4906 13.2497C16.7718 12.9682 17.2282 12.9682 17.5094 13.2497L23.7889 19.5292C24.0704 19.8104 24.0704 20.2667 23.7889 20.548L17.5094 26.8275C17.3687 26.9682 17.1842 27.0386 16.9998 27.0386C16.8153 27.0386 16.6309 26.9682 16.4904 26.8275C16.2089 26.5462 16.2089 26.0899 16.4904 25.8087L22.2604 20.0386L16.4906 14.2685C16.2091 13.9872 16.2091 13.5309 16.4906 13.2497Z" fill="#1B1B1B"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="{{ 'd5-slider.js' | asset_url }}" defer="defer"></script>
{% schema %}
{
  "name": "Image With Text",
  "settings": [
   {
     "type": "textarea",
     "id": "accent",
     "label": "Accent",
     "default": "Testimonials"
   },
    {
      "type": "liquid",
      "id": "heading",
      "label": "Heading",
      "default": "Thousands of reviewsâ€¨from extraordinary people like you"
    }
  ],
    "blocks": [
  {
    "type": "Image",
    "name": "Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Absolutely in love with my ring! The quality and elegance are unmatched. Highly recommend!"
      },
      {
        "type": "text",
        "id": "author_text",
        "label": "Author Name",
        "default": "Emma Richardson"
      }
    ]
  }
    ],
  "presets": [
    {
      "name": "Image With Text"
    }
  ]
}
{% endschema %}
