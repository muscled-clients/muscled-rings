<style>
    .newsletter-heading-d6 {
      width: 100%;
      max-width: 575px;
      margin: 0 auto;
  }
</style>
<section>
  <div class="newsletter-main-d6">
    <div class="newsletter-heading-d6">
      <div class="newsletter-headings-d6">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.content }}</p>
      </div>
      <div class="newsletter-d6">
        {% render 'newsletter-form-d6' %}
        <p>{{ section.settings['note-text'] }}</p>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Newsletter Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Text",
      "default": "Add Text"
    },
    {
      "type": "text",
      "id": "note-text",
      "label": "Note Text",
      "default": "Note: You can opt-out at any time"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Section"
    }
  ]
}
{% endschema %}
