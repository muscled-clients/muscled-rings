<section>
  <div class="newsletter-main-d6">
    <div class="newsletter-heading-d6">
      <div class="newsletter-headings-d6">
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.content }}</p>
      </div>
      <div class="newsletter-d6">
        {% render 'newsletter-form-d6' %}
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Newsletter Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Section"
    }
  ]
}
{% endschema %}
