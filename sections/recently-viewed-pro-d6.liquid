<style>
  .recently-main-d6{
  width: 100%;
  max-width: 1180px;
  margin: 0 auto;
  }
</style>
<section>
  <div class="recently-main-d6">
    {% render 'recently-viewed-d6' %}
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const slider = document.querySelector(".js-recentPdpBlock");
    const leftArrow = document.querySelector(".arrow-left");
    const rightArrow = document.querySelector(".arrow-right");
    const scrollAmount = 300; // Adjust scroll amount per click

    function checkScroll() {
      leftArrow.disabled = slider.scrollLeft <= 0;
      rightArrow.disabled = slider.scrollLeft + slider.clientWidth >= slider.scrollWidth;
    }

    leftArrow.addEventListener("click", () => {
      slider.scrollBy({ left: -scrollAmount, behavior: "smooth" });
    });

    rightArrow.addEventListener("click", () => {
      slider.scrollBy({ left: scrollAmount, behavior: "smooth" });
    });

    slider.addEventListener("scroll", checkScroll);

    // Initial check on page load
    checkScroll();
  });
</script>
