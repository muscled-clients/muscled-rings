document.addEventListener("DOMContentLoaded", function () {
    const progressBar = document.querySelector(".proscroll-video-bar__d11");
    const scrollContainer = document.querySelector(".video-social-d11__video-block");

    if (!progressBar || !scrollContainer) {
        console.error("Progress bar or scroll container not found.");
        return;
    }

    function updateProgressBar() {
        let scrollPosition = scrollContainer.scrollLeft;
        let maxScroll = scrollContainer.scrollWidth - scrollContainer.clientWidth;
        let scrollPercentage = (scrollPosition / maxScroll) * 100;
        
        // ✅ Prevent duplicate inline styles
        if (progressBar.style.width !== `${scrollPercentage}%`) {
            progressBar.style.width = `${scrollPercentage}%`;
        }
    }

