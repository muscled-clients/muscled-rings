        function initVideoFromSocial2() {
            document.querySelector('.video-social-slider-d11__video-block').classList.remove('preview');

            document.querySelectorAll('.video-social-card-d11__video-block').forEach(card => {
                let video = card.querySelector('video');
                let muteButtons = card.querySelectorAll('.video-social-mute-d11__video-block');
                let unmuteButtons = card.querySelectorAll('.video-social-unmute-d11__video-block');

                if (!video || muteButtons.length === 0 || unmuteButtons.length === 0) return;

                // ✅ Play/Pause video on click
                card.addEventListener("click", function () {
                    video.paused ? video.play() : video.pause();
                });

                // ✅ Toggle Mute/Unmute for All Buttons
                function toggleMute() {
                    let isMuted = !video.muted;
                    video.muted = isMuted;

                    // ✅ Sync all mute/unmute buttons for this video
                    muteButtons.forEach(btn => btn.style.display = isMuted ? "block" : "none");
                    unmuteButtons.forEach(btn => btn.style.display = isMuted ? "none" : "block");
                }

                // ✅ Add event listeners to mute/unmute buttons
                muteButtons.forEach(btn => btn.addEventListener("click", function (event) {
                    event.stopPropagation(); // Prevent video click event from triggering
                    toggleMute();
                }));

                unmuteButtons.forEach(btn => btn.addEventListener("click", function (event) {
                    event.stopPropagation();
                    toggleMute();
                }));

                // ✅ Set initial mute/unmute state for all buttons
                muteButtons.forEach(btn => btn.style.display = video.muted ? "block" : "none");
                unmuteButtons.forEach(btn => btn.style.display = video.muted ? "none" : "block");
            });

            // ✅ Prevent video downloads
            document.querySelectorAll('.section-d11__video-block video').forEach(video => {
                video.setAttribute('controlsList', 'nodownload');
            });

            // ✅ Lazy loading for performance optimization
            const observer = lozad();
            observer.observe();
        }

