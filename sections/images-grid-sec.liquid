<style>
  .main-images-grid-d6{
    padding: 30px 0 0 0;
  }
    .images-grid-d6 {
      display: flex;
      align-items: center;
  }
  .image-block-d6 img{
    height: 100%;
    width: 100%;
  }
  @media (max-width: 750px){
    .image-block-d6{
      width: 50%;
    }
  }
</style>
<section>
  <div class="main-images-grid-d6">
    <div class="images-grid-d6">
      {% for block in section.blocks %}
        {% if block.settings['block-img'] %}
          <div class="image-block-d6">
            <img src="{{ block.settings.block-img | image_url: width: 800 }}" width="300%" height="300">
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Images Grid",
  "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "block-img",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
     "name": "Images Grid"
    }
  ]
}
{% endschema %}
