
<style>
  .custom-ring-section {
  display: flex;
padding: 80px 0px;
flex-direction: column;
justify-content: center;
align-items: center;
gap: 24px;
align-self: stretch;
    background: #F2F1EA;
    width: 100%;
}

.custom-ring-section .container {
  max-width: 780px;
  margin: 0 auto;
  text-align: center;
}

.custom-ring-section h2 {
  color: #1B1B1B;
text-align: center;
font-family: "Tenor Sans";
font-size: 32px;
font-style: normal;
font-weight: 400;
line-height: normal;
}

.custom-ring-section .description {
  color: #1B1B1B;
text-align: center;
font-family: Roboto;
font-size: 14px;
font-style: normal;
font-weight: 300;
line-height: 20px; /* 142.857% */
  margin: 12px auto 24px;
  
}

.custom-ring-section .images-container {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 24px;
width: 100%;
}

.custom-ring-section img {
  width: 100%;
  height: auto;
  max-width: 380px;
max-height: 280px;
  object-fit: cover;
  border: 0.5px solid rgba(45, 27, 56, 0.25);
}

.custom-ring-section .bottom-description {
  color: #1B1B1B;
text-align: center;
font-family: Roboto;
font-size: 14px;
font-style: normal;
font-weight: 300;
line-height: 20px; /* 142.857% */
  max-width: 681px;
  margin: 0 auto;
}

 
@media (max-width: 798px) {
  .custom-ring-section {
    padding: 20px;
    gap: 12px;
  }

  .custom-ring-section h2 {
    font-size: 24px;
    text-align: center;
  }

  .custom-ring-section .description,
  .custom-ring-section .bottom-description{
    font-size: 14px;
    line-height: 20px;
    padding: 0 8px;
    margin: 8px 0 16px;
  }
.custom-ring-section .bottom-description{
  margin: 0;
}
  .custom-ring-section .images-container {
    align-items: center;
    gap: 4px;
    margin-bottom: 16px;
  }

  .custom-ring-section img {
    max-width: calc(50% - 2px);
    max-height: 220px;
    width: 100%;
    height: auto;
    aspect-ratio: 165/280;
  }
}


</style>

<section class="custom-ring-section">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <p class="description">{{ section.settings.description }}</p>
    
    <div class="images-container">
      {% if section.settings.image_1 %}
        <img src="{{ section.settings.image_1 | img_url: 'large' }}" alt="Left Image" class="image-left">
      {% endif %}
      {% if section.settings.image_2 %}
        <img src="{{ section.settings.image_2 | img_url: 'large' }}" alt="Right Image" class="image-right">
      {% endif %}
    </div>

    <p class="bottom-description">{{ section.settings.bottom_description }}</p>
  </div>
</section>


{% schema %}
{
  "name": "Custom Ring Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Beautifully Handcrafted Rings That Celebrate Love, Commitment, and Timeless Elegance"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "This contemporary rope style solitaire engagement ring features a woven design that is"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Right Image"
    },
    {
      "type": "textarea",
      "id": "bottom_description",
      "label": "Bottom Description",
      "default": "Enjoy quality packaging and free shipping with every order. We also offer hassle-free, 30-day returns - no questions asked! Don't forget we'll be here forever with our lifetime warranty."
    }
  ],
  "presets": [
    {
      "name": "Custom Ring Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}